{
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "tools/*"
        ],
        "nohoist": [
            "{@airtable,@airtable-blocks-internal}/*/*"
        ]
    },
    "devDependencies": {
        "husky": "^3.0.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "release-it": "^12.3.3"
    },
    "scripts": {
        "format": "prettier --write '**/*.{js,md,json,yml}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
