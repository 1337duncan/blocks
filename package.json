{
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "tools/*",
            "docs"
        ],
        "nohoist": [
            "{@airtable,@airtable-blocks-internal}/*/!(react|react-dom)",
            "**/{@styled-system,@storybook,emotion,@emotion,csstype}/*"
        ]
    },
    "devDependencies": {
        "husky": "^3.0.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "release-it": "^12.3.3"
    },
    "scripts": {
        "format": "prettier --write '**/*.{js,md,json,yml}'",
        "test": "yarn workspaces run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
