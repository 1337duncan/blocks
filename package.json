{
    "private": "true",
    "devDependencies": {
        "husky": "^3.0.0",
        "lerna": "^3.15.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1"
    },
    "scripts": {
        "format": "prettier --write '**/*.{js,md,json,yml}'",
        "prepublishOnly": "lerna bootstrap",
        "postpublish": "git push --tags git@github.com:Airtable/blocks-sdk.git master"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
